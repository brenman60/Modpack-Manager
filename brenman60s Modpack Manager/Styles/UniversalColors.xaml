<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="baseColor" Color="#FF616161"/>
    <SolidColorBrush x:Key="hoverColor" Color="#FF545454"/>
    <SolidColorBrush x:Key="selectedColor" Color="#FF464646"/>

    <SolidColorBrush x:Key="baseColor2" Color="#FF5A5A5A"/>
    <SolidColorBrush x:Key="hoverColor2" Color="#FF565656"/>
    <SolidColorBrush x:Key="selectedColor2" Color="#FF505050"/>

    <SolidColorBrush x:Key="baseColor3" Color="#FF646464"/>
    
    <SolidColorBrush x:Key="checkmarkBaseColor" Color="#FF5A5A5A"/>
    <SolidColorBrush x:Key="checkmarkHoverColor" Color="#FF565656"/>
    <SolidColorBrush x:Key="checkmarkSelectedColor" Color="#FF505050"/>

    <LinearGradientBrush x:Key="tabBaseColor">
        <GradientStop Color="#FF616161" Offset="1"/>
        <GradientStop Color="#FF545454" Offset="0"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="tabHoverColor">
        <GradientStop Color="#FF616161" Offset="1"/>
        <GradientStop Color="#FF545454" Offset="0.5"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="tabSelectedColor">
        <GradientStop Color="#FF616161" Offset="1"/>
        <GradientStop Color="#FF545454" Offset="0.75"/>
    </LinearGradientBrush>

</ResourceDictionary>