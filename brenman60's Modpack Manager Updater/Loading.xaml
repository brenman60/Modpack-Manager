<Window x:Class="brenman60_s_Modpack_Manager.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:brenman60_s_Modpack_Manager"
        xmlns:dwm="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
        mc:Ignorable="d"
        Title="Updater" Height="60" Width="600"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Background="#FF424242">

    <Grid>
        <TextBlock Text="{Binding Path=loadingStatus}" x:Name="progressText" Margin="2,0,2,28" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" Foreground="#FFCACACA"></TextBlock>
        <ProgressBar x:Name="loadingProgressBar" Height="24" Width="596" VerticalAlignment="Top" HorizontalAlignment="Center" Background="#FF565656" Foreground="#FF9A9A9A" BorderBrush="#00BCBCBC" Cursor="Wait" IsIndeterminate="True" Margin="0,16,0,0"/>
    </Grid>
</Window>
